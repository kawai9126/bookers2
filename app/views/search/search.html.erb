<%# byebug %>
<div class="container px-5 px-sm-0">
    <div class="row">
       <% if @faculty == 'User' %>
      <h1>
        Users search for "<%= @text %>"
      </h1>
      <% else %>
      <h1>
        Books search for "<%= @text %>"
      </h1>
      <% end %>
      <table class="table">
        <% if @faculty == 'User' %>
        <thead>
            <tr>
                <th>Image</th>
                <th></th>
                <th>Name</th>
            </tr>
        </thead>
         <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                 <%= attachment_image_tag @user, :profile_image, size: "40x40", fallback: "no_image.jpg"%>
              <td>
              <td>
                <%= link_to user.name, user_path(user.id) %>
              </td>
            </tr>
          </tbody>
          <% end %>
        <% else %>
        <thead>
            <tr>
              <th></th>
              <th></th>
              <th>Title</th>
              <th>Option</th>
              <th colspan="3"></th>
            </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                 <%= attachment_image_tag @user, :profile_image, size: "40x40", fallback: "no_image.jpg"%>
              <td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          </tbody>
          <% end %>
        <% end %>
      </table>
    </div>
</div>
