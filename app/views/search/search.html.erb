<%# byebug %>
<div class="container px-5 px-sm-0">
    <div class="row">
      <h1>
        Books search for
      </h1>
      <table class="table">
        <thead>
            <tr>
              <th>Title</th>
              <th>Option</th>
            </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
</div>
