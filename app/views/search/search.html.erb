<%# byebug %>
<div class="container px-5 px-sm-0">
    <div class="row">
      <h1>
        Books search for
      </h1>
      <table class="table">
        <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
        </thead>
        <% @books.each do |user| %>
          <tbody>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "no_image.jpg"%>
              </td>
              <td>
                <%= book.title %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
</div>
