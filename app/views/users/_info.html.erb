<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, size: "60x60", fallback: "no_image.jpg"%>
<table>
   <th>name<%= user.name %></th>
   <th>introduction<%= user.introduction %></th>
</table>
<div class="row">
    <%= link_to  edit_user_path(user.id), class:"btn btn-outline-secondary w-100" do %>
    <i class=“fas fa-user-cog”></i>
    <% end %>
</div>