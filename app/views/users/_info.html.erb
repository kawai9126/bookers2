<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.jpg" %>
<table class="table">
    <tbody>
        <tr></tr>
        <tr>
           <th>name</th>
           <th><%= user.name %></th>
        </tr>
        <tr>
           <th>introduction</th>
           <th><%= user.introduction %></th>
        </tr>
        <tr>

            <th>follows<%= link_to user.followed.count,user_follow_path%></th>
        </tr>
        <tr>
            <th>followers<%= link_to user.follower.count,user_follower_path %></th>
        </tr>
        <tr>
            <th>
                <% if user.id != current_user.id %>
                    <% if current_user.following?(user) %>
                        <%= link_to 'フォロー外す', unfollow_path(user.id), method: :POST, class:"btn btn-success" %>
                     <% else %>
                        <%= link_to 'フォローする', follow_path(user.id), method: :POST, class:"btn btn-success" %>
                     <% end %>
                 <% end %>
            </th>
        </tr>
    </tbody>
</table>
<div class="row">
    <%= link_to  edit_user_path(user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" do %>
    <i class=“fas fa-user-cog”></i>
    <% end %>
</div>