<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <%= render 'users/info', user: @user %>
            <%= render 'books/new', book: @book %>
            <h1>投稿一覧</h1>
            <% @books.each do |book| %>
              <p>タイトル</p>
              <span><%= attachment_image_tag book.user, :profile_image, size: "60x60", fallback: "no_image.jpg"%></span>
              <span><%= book.title %></span>
              <span><%= book.body %></span>

            <% end %>
        </div>
    </div>
</div>
