<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <%= render 'users/info', user: @user %>
            <%= render 'books/new', book: @book %>
            <div class="col-md-8 offset-md-1">
                <h1>Books</h1>
                <table class="table-hover table-inverse">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Option</th>
                            <th colspan="3"></th>
                        </tr>
                    </thead>
                    <% @books.each do |book| %>
                    <tbody>
                        <tr>
                            <td>
                                <%= attachment_image_tag book.user, :profile_image, size: "60x60", fallback: "no_image.jpg"%>
                            </td>
                            <td>
                                <%= book.title %>
                            </td>
                            <td>
                                <%= book.body %>
                            </td>
                        </tr>
                    </tbody>
                    <% end %>
                </table>
            </div>
        </div>
    </div>
</div>
